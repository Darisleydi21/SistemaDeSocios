@model List<CapaPresentacion.Models.Socios>

@{
    ViewBag.Title = "Index";
}

<br />
<h2>FORMULARIO PARA SOCIOS</h2>
<div class="alert alert-@ViewBag.alerta"> - - <b>@ViewBag.res</b> - - </div>
<form action="/Socio/Index" method="post">
    <table >
        <tr>
            <td style="padding: 10px"> Nombre: </td>
            <td style="padding: 10px"><input class="form-control" type="text" name="nom" id="nom" required /></td>

        </tr>
        <tr>
            <td style="padding: 10px"> Cedula con guiones: </td>
            <td style="padding: 10px"><input class="form-control" type="text" name="ced" id="ced" required /></td>

        </tr>

        <tr>
            <td style="padding: 10px"> Direccion: </td>
            <td style="padding: 10px"><input class="form-control" type="text" name="dir" id="dir" required /></td>

        </tr>
        <tr>
            <td style="padding: 10px"> Telefono: </td>
            <td style="padding: 10px"><input class="form-control" type="text" name="tel" id="tel" required /></td>

        </tr>
        <tr>
            <td style="padding: 10px"> Tipo de Membresia: </td>
            <td style="padding: 10px"><input class="form-control" type="text" name="tipo" id="tipo" required /></td>

        </tr>
        <tr>
            <td style="padding: 10px"> Contacto de  Emergencia: </td>
            <td style="padding: 10px"><input class="form-control" type="text" name="contactoname" id="contactoname" required /></td>

        </tr>
        <tr>
            <td style="padding: 10px"> Telefono Contacto de Emergencia: </td>
            <td style="padding: 10px"><input class="form-control" type="text" name="telcontacto" id="telcontacto" required /></td>

        </tr>
        <tr>
            <td style="padding: 10px"></td>
            <td style="padding: 10px">
                <button class="btn btn-success"  type="submit" name="btn1" id="btn1">Agregar</button>

            </td>
        </tr>
    </table>
</form>

<br />
<br />
<table id="table_pelis" class="table table-bordered">
    <thead style="background-color: black; color: white">
        <tr>
            <th style="text-align: center">Nombre</th>
            <th style="text-align: center" >Tipo de Membresia</th>
            <th style="text-align: center">Pasar a pagar la membresia antes del </th>

        </tr>
    </thead>
    <tbody style="background-color:white">
        @foreach (var f in Model)
         {
            <tr>

                <td style="text-align: center">@f.NombreSocio</td>
                <td style="text-align: center">@f.TipoMembresia</td>
                <td style="text-align: center">@f.PagarAntesDe</td>


            </tr>
         }

    </tbody>
</table>
<style>
    h2 {
        font-weight: normal;
        display: block;
        margin: 0.5em 0;
        font-size: 50px;
        text-align: center;
        font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        letter-spacing: 0;
        color: #450909;
    }
    td {
        font-weight:300;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }

</style>